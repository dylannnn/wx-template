<template name="content">
    <view class="item">
        <view class="autorContainer">
            <image class="avatar" src="{{item.avatar}}" background-size="cover"></image>
            <text class="author">{{item.author}}</text>
        </view>
        <text class="content">{{item.content}}</text>
        <image class="image" src="{{item.image}}" background-size="cover" wx:if="{{!!item.image}}"></image>
        <view class="statusContainer">
            <text class="status">好笑 {{item.likes}} · 评论 {{item.comments}}</text>
        </view>
    </view>
    <view class="sperator" />
</template>
