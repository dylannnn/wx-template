<loading hidden="{{!loading}}">
  加载中...
</loading>
<scroll-view class="list" style="height: {{windowHeight}}px; width: {{windowWidth}}px; " scroll-y="true" bindscrolltolower="pullUpLoad" lower-threshold="800">
    <block wx:for="{{list}}" wx:for-item="item">
        <view class="item">
            <view class="autorContainer">
                <image class="avatar" src="{{item.avatar}}" background-size="cover"></image>
                <text class="author">{{item.author}}</text>
            </view>
            <text class="content">{{item.content}}</text>
            <view class="statusContainer">
                <text class="status">好笑 {{item.likes}} · 评论 {{item.comments}}</text>
            </view>
        </view>
        <view class="sperator" />
    </block>
</scroll-view>
